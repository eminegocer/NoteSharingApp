@model User
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <style>
        body, html {
            height: 100%;
            display: flex;
            justify-content: center; /* Yatay merkezleme */
            align-items: center; /* Dikey merkezleme */
        }

        .register-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/img/home-bg.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: -1;
            filter: brightness(70%);
        }

        .register-box {
            background: rgba(255, 255, 255, 0.9);
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            color: black;
            max-width: 500px;
            width: 100%;
            text-align: center;
        }


            .register-box h2 {
                color: #4CAF50;
                font-size: 25px; /* Başlık boyutu küçültüldü */
                margin-bottom: 15px;
            }

        .form-group {
            margin-bottom: 10px;
            text-align: left;
        }

            .form-group label {
                font-size: 15px; /* Label boyutu küçültüldü */
                font-weight: 600;
                color: #333;
            }

            .form-group input {
                width: 100%;
                padding: 10px; /* Input alanı küçültüldü */
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 14px;
            }

                .form-group input:focus {
                    border-color: #4CAF50;
                    outline: none;
                }

        .btn-register {
            width: 100%;
            padding: 11px; /* Buton küçültüldü */
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-register:hover {
                background-color: #45a049;
            }

        .text-center {
            text-align: center;
            margin-top: 10px;
            font-size: 15px; /* Yazı boyutu küçültüldü */
        }

            .text-center a {
                color: #4CAF50;
                text-decoration: none;
            }

                .text-center a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="register-container"></div>

    <div class="register-box">
        <h2>Kayıt Ol</h2>
        <form asp-controller="Home" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="UserName">Kullanıcı Adı</label>
                <input asp-for="UserName" placeholder="Kullanıcı Adı">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">E-posta</label>
                <input asp-for="Email" placeholder="E-posta">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" type="password" placeholder="Şifre">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifre Onayı</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifre Onay" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchoolName">Okul Adı</label>
                <input asp-for="SchoolName" class="form-control" placeholder="Okul Adı">
                <span asp-validation-for="SchoolName" class="text-danger"></span>
            </div>

            <button class="btn-register">Kayıt Ol</button>
            <p class="text-center">Zaten bir hesabınız var mı? <a href="#">Giriş Yap</a></p>
        </form>
    </div>

</body>
</html>

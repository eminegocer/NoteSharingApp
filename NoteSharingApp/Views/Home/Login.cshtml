@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Login Page - NoteSharingApp">
    <title>Login - NoteSharingApp</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        /* Genel Stiller */
        body {
            margin: 0;
            background-position: center;
            background-repeat: no-repeat;
            padding: 0;
            font-family: Arial, sans-serif;
            background: url('/img/home-bg.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        /* Navbar (Sabit Üst Kısım) */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Navbar Kapandıktan Sonra İçerik Aşağı Kaymasın */
        .content {
            padding-top: 80px;
        }

        /* Login Sayfası */
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* Login Kutusu */
        .login-box {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(8px);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 320px;
        }

            /* Login Başlığı */
            .login-box h2 {
                color: #9c7ed3; /* Lila tonunda renk */
                margin-bottom: 20px;
            }

            /* Form Alanları */
            .login-box label {
                display: block;
                text-align: left;
                font-size: 14px;
                margin-bottom: 5px;
            }

            .login-box input {
                width: 100%;
                padding: 8px;
                margin-bottom: 15px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            /* Giriş Yap Butonu */
            .login-box button {
                width: 100%;
                padding: 10px;
                background-color: #9c7ed3; /* Lila tonunda buton rengi */
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

                .login-box button:hover {
                    background-color: #7e5ba6; /* Lila tonunun biraz koyusu */
                }

            /* Kayıt Linki */
            .login-box p {
                margin-top: 10px;
                font-size: 14px;
            }

            .login-box a {
                color: #9c7ed3; /* Lila tonu */
                text-decoration: none;
                font-weight: bold;
            }

                .login-box a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body>
    @{
        ViewData["Title"] = "Giriş Yap";
    }

    <div class="login-container">
        <div class="login-box">
            <h2>Giriş Yap</h2>
            <form asp-action="Login" method="post">
                <label asp-for="UserName">Kullanıcı Adı</label>
                <input asp-for="UserName" placeholder="Kullanıcı Adı" required>
                <span asp-validation-for="UserName" class="text-danger"></span>

                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" type="password" placeholder="Şifre" required>
                <span asp-validation-for="Password" class="text-danger"></span>

                <button type="submit">Giriş Yap</button>
            </form>
            <p>Hesabınız yok mu? <a asp-action="Register">Buradan kayıt olun</a></p>
        </div>
    </div>

</body>
</html>
